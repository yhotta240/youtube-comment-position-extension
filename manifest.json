{
  "manifest_version": 3,
  "name": "YouTube コメントポジション - YouTube Comment Position",
  "version": "1.2.0",
  "description": "YouTubeのコメント欄の位置を変える拡張機能",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
